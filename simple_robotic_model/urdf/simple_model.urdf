<?xml version="1.0"?>
	<robot name="simple_robot">	
		<material name="blue">
			<color rgba="0 0 0.8 1"/>
		</material>

		<material name="white">
			<color rgba="1 1 1 1"/>
		</material>

		<link name="base_link">
			<visual>
				<geometry>
					<cylinder length="0.6" radius="0.1"/>
				</geometry>
				<material name="blue"/>
			</visual>
			<collision>
				<geometry>
					<cylinder length="0.6" radius="0.1"/>
				</geometry>
			</collision>
			<inertial>
				<mass value="20"/>
				<inertia ixx="1.0" ixy="0.5" ixz="0.0" iyy="0.2" iyz="0.0" izz="0.4"/>
			</inertial>
		</link>

		<link name="second_link">
			<visual>
				<geometry>
					<cylinder length="0.6" radius="0.1"/>
				</geometry>
				<origin rpy="0 0 0"/>
				<material name="white"/>
			</visual>
			<collision>
				<geometry>
					<cylinder length="0.6" radius="0.1"/>
				</geometry>
			</collision>
			<inertial>
				<mass value="10"/>
				<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
			</inertial>
		</link>

		<joint name="base_to_second" type="revolute">
			<axis xyz="0 1 0"/>
			<limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/>
			<origin rpy="0 0 0" xyz="0 0 0.6"/>
			<parent link="base_link"/>
			<child link="second_link"/>
		</joint>

</robot>
